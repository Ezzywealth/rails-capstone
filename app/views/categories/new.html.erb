<h2>Create a new category</h2>
<%= form_with(model: @category, url: categories_path, local: true, method: :post, multipart: true) do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name, required: true %>
  </div>

  <div>
    <%= form.label :icon %><br>
    <%= form.file_field :icon, required: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
